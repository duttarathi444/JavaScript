<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/signinform.css">
<script type="text/javascript">
	function myFunction(){
		var passwo = document.getElementById('pass');
		if(passwo.type === 'password'){
			passwo.type = 'text';
		}else{
			passwo.type = 'password';
		}
	}
	</script>
</head>
<body background="/images/lg2.jpg">
	<header>
		<center><h2 style="color: yellow">Student Login</h2></center>
	</header>
	<main>
		<% if(editmode == true){ %>
		<center><h2 style="color: seagreen;">Your data has been Submitted</h2></center>
		<% } %>

		<form class="employee-form" action="/student/studentSigninData" method="POST">

			<div class="form-group">
                <label for="emai" class="cng1" style="color: white">Email</label>
                <input type="email" name="email" id="emai" class="form-control" required>
            </div>

			<div class="form-group">
                <label for="pass" class="cng1" style="color: white">Password</label>
                <input type="password" name="password" id="pass" class="form-control" >
			</div>
			
			<input type="hidden" value="<%= prods%>" name="codeId">

            <div class="see">
            	<input type="checkbox" id="seepass" name="seepass" style="color: white" onclick="myFunction()">See Password
            </div>
            <button class="btn1" type="submit">Sign In</button>
		</form>

		<form action="/student/studentSignup" method="POST">
			<input type="hidden" value="<%= prods%>" name="codeID">
			<div class="gap">
		    	<center><button class="btn2" type="submit">Sign Up</button></center>
			</div>
		</form>
	</main>
<%- include('../includes/end.ejs')%>